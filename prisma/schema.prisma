generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          Int         @id @default(autoincrement())
  email       String      @unique
  password  String
  accountType String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Invite {
  id        Int      @id @default(autoincrement())
  code      String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
}

model Post {
  id        Int      @id @default(autoincrement())
  filePath  String   // Points to the file in the filesystem
  caption   String?
  tags      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
